rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // === USUARIOS ===
    match /users/{userId} {
      // Los usuarios pueden leer y escribir solo sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Perfil público puede ser leído por todos
      match /profile/{document=**} {
        allow read: if true;
      }
    }
    
    // === PROPIEDADES ===
    match /properties/{propertyId} {
      // Cualquiera puede leer propiedades activas
      allow read: if true;
      
      // Solo el propietario puede crear/modificar sus propiedades
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                              request.auth.uid == resource.data.ownerId;
      
      // Validación de campos requeridos
      allow write: if request.resource.data.keys().hasAll([
        'title', 'description', 'propertyType', 'pricePerNight', 
        'capacity', 'location', 'ownerId'
      ]);
    }
    
    // === RESERVAS ===
    match /reservations/{reservationId} {
      // Los usuarios autenticados pueden leer reservas donde son propietario o huésped
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.ownerId ||
        request.auth.uid == resource.data.guestId
      );
      
      // Los huéspedes pueden crear reservas
      allow create: if request.auth != null && 
                       request.resource.data.guestId == request.auth.uid &&
                       request.resource.data.keys().hasAll([
                         'propertyId', 'ownerId', 'guestId', 'checkIn', 'checkOut',
                         'guests', 'total', 'status'
                       ]);
      
      // El propietario puede actualizar el estado de la reserva
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.ownerId &&
                       request.resource.data.keys().hasAll(['status', 'updatedAt']);
      
      // Solo el propietario puede eliminar reservas (soft delete preferido)
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.ownerId;
    }
    
    // === MENSAJES ===
    match /messages/{messageId} {
      // Cualquiera autenticado puede crear mensajes
      allow create: if request.auth != null;
      
      // Solo el propietario puede leer mensajes dirigidos a él
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.ownerId;
      
      // Solo el propietario puede marcar como leído
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.ownerId;
    }
    
    // === RESEÑAS ===
    match /reviews/{reviewId} {
      // Cualquiera puede leer reseñas
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear reseñas
      allow create: if request.auth != null;
      
      // Solo el autor puede editar su reseña
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.authorId;
    }
    
    // === SUSCRIPCIONES ===
    match /subscriptions/{userId} {
      // Solo el usuario puede leer su propia suscripción
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Solo el sistema (Functions) puede escribir suscripciones
      // Los usuarios no pueden modificar directamente
      allow write: if false;
    }
    
    // === PAGOS ===
    match /payments/{paymentId} {
      // Solo el usuario puede ver sus propios pagos
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      
      // Solo Functions pueden crear pagos
      allow write: if false;
    }
    
    // === NOTIFICACIONES ===
    match /notifications/{notificationId} {
      // Solo el destinatario puede leer sus notificaciones
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      
      // El usuario puede marcar como leída
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.userId &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['read', 'readAt']);
      
      // Solo Functions pueden crear notificaciones
      allow create: if false;
    }
  }
}
