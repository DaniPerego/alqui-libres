rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir a usuarios autenticados subir im√°genes de sus propiedades
    match /properties/{userId}/{propertyId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Permitir a usuarios autenticados subir su foto de perfil
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
